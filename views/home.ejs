<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head.ejs') %>
    <title>Blogify</title>
</head>
<body style="background-color: #0b0e11;">
    <%- include('./partials/nav.ejs') %>
    
    <div class="container mt-5 text-center">
        <div class="row row-cols-3">
        <% blogs.forEach(blog => { %>
            <div class="card col m-3 p-2" style="width: 18rem; background-color: #0d0f14; border-color: #00C5C8 ;">
                <img src="<%= blog.coverImage %>" class="card-img-top" alt="...">
                <div class="card-body">
                  <h5 class="card-title" style="color: #00C5C8;"><%= blog.title %></h5>
                  <a href="/<%= blog._id %>" class="btn btn-primary px-3" style="background-color:#00C5C8; color: #050607; border-color: #00C5C8">View</a>
                </div>
            </div>
        <% }) %>
    </div></div>

    <%- include('./partials/scripts.ejs') %>
</body>
</html>